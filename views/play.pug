extends layout
block content
  header.main-header
    .container
      nav.navbar.navbar-expand-lg.main-nav.px-0
        #mainMenu.collapse.navbar-collapse.justify-content-center
          ul.navbar-nav.ml-auto.text-uppercase.f1
            li
              a.active.active-first(href='/') home
            li
              a(href='/new_quiz') New Quiz
            //- li
            //-   a(href='/search') search
            li
              a(href='/your_quiz') your quizs
            li
              a(href='/profile') Profile
            li
              a(href='/logout') logout

  .card(style="min-width: 30rem;")
    .card-body
      h3.card-title #{quiz.data[0].quiz_name} Quiz (#{quiz.pagination.currentPage} / #{quiz.data[0].number_of_questions} )
      p Quiz Category: #{quiz.data[0].category}
      hr
      h5.card-text #{quiz.data[0].question}
      .form 
        form(action="/quiz/"+quiz.data[0].id+"/play/"+quiz.pagination.currentPage, method="POST")
          input.form-control(type="hidden", name="question_id", value=quiz.data[0].question_id)
          input.form-control(type="hidden", name="quiz_id", value=quiz.data[0].id)     
          input.form-control(type="hidden", name="number_of_questions", value=quiz.data[0].number_of_questions)
          .form-check
            input#flexRadioDefault1.form-check-input(type='radio' name='answer' value='1' checked)
            label.form-check-label(style="padding-top: 0px;" for='flexRadioDefault1')
              | #{quiz.data[0].option1}

          .form-check
            input#flexRadioDefault2.form-check-input(type='radio' name='answer' value='2')
            label.form-check-label(style="padding-top: 0px;" for='flexRadioDefault2')
              | #{quiz.data[0].option2}
          .form-check
            input#flexRadioDefault3.form-check-input(type='radio' name='answer' value='3')
            label.form-check-label(style="padding-top: 0px;" for='flexRadioDefault3')
              | #{quiz.data[0].option3}
          .form-check
            input#flexRadioDefault4.form-check-input(type='radio' name='answer' value='4')
            label.form-check-label(style="padding-top: 0px;" for='flexRadioDefault4')
              | #{quiz.data[0].option4}
          button.btn.btn-primary(type='submit') Submit Answer