extends layout
block content
  header.main-header
    .container
      nav.navbar.navbar-expand-lg.main-nav.px-0
        #mainMenu.collapse.navbar-collapse.justify-content-center
          ul.navbar-nav.ml-auto.text-uppercase.f1
            li
              a.active.active-first(href='/') home
            li
              a(href='/new_quiz') New Quiz
            //- li
            //-   a(href='/search') search
            li
              a(href='/your_quiz') your quizs
            li
              a(href='/profile') Profile
            li
              a(href='/logout') logout
  .container 
    h1(style="text-align: center; margin-top: 40px;color: #fff;") Hello #{username}! Welcome back to Quiz App
  
  if (quizs.length > 0)
    for quiz in quizs
      .courses-container
        .course
          .course-preview
            h6 Quiz Category
            h2 #{quiz.category}
            a(href='#')
              | View all Quizzes  
              i.fas.fa-chevron-right
          .course-info
            h6 Mani Sai Prasad
            h2 #{quiz.quiz_name}
            h6 #{quiz.desc}
            form(action="/quiz/"+quiz.id+"/play/1" method="GET") 
              button.btn(style="position: absolute;bottom: 30px;right: 30px;") Take Quiz
    