extends layout
block content
    .container
        .row
            .col-sm-9.col-md-7.col-lg-5.mx-auto
                .card.border-0.shadow.rounded-3.my-5
                    .card-body.p-4.p-sm-5
                        h5.card-title.text-center.mb-5.fw-light.fs-5 Log In
                        form#form.form(action='/login', method='POST')
                            .form-floating.mb-3
                                input#floatingInput.form-control(type='email' required='true' name='email' placeholder='name@example.com')
                                label(for='floatingInput') Email address
                            .form-floating.mb-3
                                input#floatingPassword.form-control(type='password' required='true' name='password' placeholder='Password')
                                label(for='floatingPassword') Password
                            .text-center
                                button.btn.btn-primary.btn-login.text-uppercase.fw-bold.text-center(type='submit') Log In
                        if messages.error
                            .alert.alert-danger.text-center
                                | #{messages.error}
                        hr.my-4
                        .text-center
                            p Don't have an account ?
                            a(href="/signup") Sign Up 
